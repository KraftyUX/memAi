{
  "name": "memai",
  "version": "1.3.2",
  "description": "AI Memory System",
  "main": "dist/src/memai.js",
  "type": "module",
  "bin": {
    "memai": "dist/src/cli.js",
    "mcp-server": "dist/src/mcp-server.js"
  },
  "scripts": {
    "test": "vitest --run",
    "dashboard": "node dist/src/server.js",
    "dashboard:build": "cd dashboard && npm run build",
    "dashboard:dev": "cd dashboard && npm run dev",
    "init": "node dist/src/init.js",
    "build": "tsc && node -e \"require('fs').copyFileSync('src/schema.sql', 'dist/src/schema.sql')\"",
    "build:all": "npm run build && npm run dashboard:build",
    "prepare": "npm run build",
    "start": "npm run build:all && node dist/src/server.js",
    "dev": "ts-node src/server.ts",
    "mock-data": "npm run build && node dist/scripts/generate-mock-data.js"
  },
  "keywords": [
    "memory",
    "context",
    "sqlite",
    "knowledge-base",
    "decision-tracking",
    "ai-agent",
    "persistent-memory",
    "context-management"
  ],
  "author": "kraftyux",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kraftyux/memai.git"
  },
  "bugs": {
    "url": "https://github.com/kraftyux/memai/issues"
  },
  "homepage": "https://github.com/kraftyux/memai#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^11.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.561.0",
    "memai": "^1.2.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "fast-check": "^4.4.0",
    "open": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}